{
  "name": "stock-levels",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run tsc",
    "copy-files": "copyfiles -u 1 src/**/*.json lib/esm && copyfiles -u 1 src/**/*.json lib/cjs",
    "clean": "rimraf lib/",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "tsc": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && npm run copy-files",
    "execute": "npm run build && node lib/cjs/run.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.43.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.1",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      ".module.ts",
      ".mock.ts",
      ".args.ts",
      "/config/",
      "/data/",
      "run.ts"
    ],
    "coverageDirectory": "../ci_reports",
    "coverageReporters": [
      "html",
      "text",
      "lcov",
      [
        "clover",
        {
          "file": "unit_test_report.xml"
        }
      ]
    ]
  },
  "jestSonar": {
    "reportPath": "ci_reports",
    "reportFile": "unit_test_report.xml",
    "indent": 4
  }
}